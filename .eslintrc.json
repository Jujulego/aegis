{
  "parser": "@typescript-eslint/parser",
  "root": true,
  "plugins": [
    "@typescript-eslint",
    "jest",
    "workspaces"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "plugin:workspaces/recommended"
  ],
  "env": {
    "node": true,
    "jest/globals": true
  },
  "rules": {
    "jsx-quotes": ["error", "prefer-double"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": ["error", {
      "allow": ["warn", "error"]
    }]
  },
  "overrides": [
    {
      "files": "*.json",
      "rules": {
        "quotes": ["error", "double"],
        "semi": ["error", "never"]
      }
    }
  ]
}
