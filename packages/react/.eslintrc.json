{
  "ignorePatterns": [
    "coverage/**",
    "dist/**"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": "**/*.{js,jsx,ts,tsx}",
      "extends": [
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:react-hooks/recommended"
      ],
      "rules": {
        "jsx-quotes": ["error", "prefer-double"]
      }
    },
    {
      "files": "tests/**/*.{js,jsx,ts,tsx}",
      "globals": {
        "jest/globals": true
      },
      "extends": [
        "plugin:jest/recommended",
        "plugin:jest/style",
        "plugin:testing-library/react"
      ]
    }
  ]
}
